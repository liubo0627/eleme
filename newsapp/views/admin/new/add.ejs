<div class="content">

    <div class="container-fluid">
        <div class="row-fluid">

         这是新闻添加

            <form action="<%=host%>admin/news/doadd" enctype="multipart/form-data" method="post">
                <label>
                   类型
                    <select name="cate_id">
                        <option value="1">体育新闻</option>
                        <option value="2">国际新闻</option>
                        <option value="3">国内新闻</option>
                        <option value="4">娱乐新闻</option>
                        <option value="5">其他新闻</option>
                    </select>
                </label><br/>
                <label>
                    title <input type="text" placeholder="title" name="title"/>
                </label><br/>
                <label>
                    作者 <input type="text" placeholder="新闻作者" name="author"/>
                </label><br/>
                <label>
                     内容<textarea name="content" id="content" cols="200" rows="30"></textarea>
                </label><br/>
                <label>
                    图片 <input type="file" name="img" multiple="multiple" placeholder="图片路径"/>
                </label><br/>
                <input type="submit" value="提交"/>
            </form>
        </div>
    </div>
</div>



