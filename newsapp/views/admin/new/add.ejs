<script type="text/javascript">
    $("[rel=tooltip]").tooltip();
    $(function() {
        $('.demo-cancel-click').click(function(){return false;});
    });

    $('#content').xheditor({
        html5Upload: false,
        upMultiple: '3',
        tools:'full',
        skin:'default',
        width:500, height:400,
        upImgUrl:"<%=host%>admin/news/upload",
        upImgExt:"jpg,jpeg,gif,png"
    });

</script>

